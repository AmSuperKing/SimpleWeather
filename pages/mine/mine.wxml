<!--pages/mine/mine.wxml-->
<view class="container">
  <view class="bg">
    <view class="userinfo">
      <view class="userinfo-avatar">
        <open-data  type="userAvatarUrl"></open-data>
      </view>
      <open-data type="userNickName"></open-data>
    </view>
  </view>

  <!-- 系统信息 -->
  <view class='system'>
    <view id='info'><text>设备信息</text></view>
    <view>
      <text>手机型号</text>
      <text class='system_color'>{{model}}</text>
    </view>
    <view>
      <text>版本号</text>
      <text class='system_color'>{{system}}</text>
    </view>
    <view>
      <text>屏幕大小</text>
      <text class='system_color'>{{screenWidth}}x{{screenHeight}}</text>
    </view>
    <view>
      <text>微信语言</text>
      <text class='system_color'>{{language}}</text>
    </view>
    <view>
      <text>地区</text>
      <view class='system_color'>
        <open-data type="userProvince" ></open-data>
        <open-data type="userCity" ></open-data>
      </view>
    </view>
    <view>
      <text>微信版本</text>
      <text class='system_color'>{{version}}</text>
    </view>
  </view>
 
</view>
